int main(){
    long int t;
    scanf("%ld",&t);
    for(int i=0;i<t;i++){
        long int n,m,s,danger=0;
        scanf("%ld %ld %ld",&n,&m,&s);
         
        danger=s+m%n-1;
       if (danger<=n){
           printf("%ld\n",danger); }
           else{
               printf("%ld\n",danger-n);
           }
       }
    return 0;
    }
